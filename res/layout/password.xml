<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"  
    android:orientation="vertical">

<TextView android:text="Forgot Password?" android:textSize="22dp" android:textStyle="bold|italic" android:textColor="#000000" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" 
    
  android:padding="1dp" android:layout_margin="1dp"/>



<!--
 ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
-->
<!--  First row  for name of the application-->
<!--
 ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
-->
<LinearLayout android:gravity="start" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
<TextView android:text="Enter User Name:" android:textSize="14dp" android:textStyle="bold" android:textColor="#000000" android:gravity="left" android:layout_gravity="top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="4dp" android:layout_margin="4dp"/>
<EditText android:id="@+id/etusername" android:textSize="18dp" android:textStyle="bold" android:textColor="#000000" android:background="#FFFF00" android:inputType="text" android:gravity="right" android:layout_gravity="top" android:layout_width="110dp" android:layout_height="wrap_content" android:padding="4dp" android:layout_margin="4dp"/>
</LinearLayout>

<!--
 ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
-->
<!--  Button row  -->
<!--
 ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
-->

<LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

    <Button
        android:id="@+id/btnforgotPassword"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Forgot Password?"
        android:textSize="18dp"
        android:textStyle="bold" />

 </LinearLayout>


</LinearLayout>