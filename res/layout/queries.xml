<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"  
    android:orientation="vertical">

<TextView android:text="Queries" android:textSize="22dp" android:textStyle="bold|italic" android:textColor="#000000" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" 
    
  android:padding="1dp" android:layout_margin="1dp"/>





<!--
 ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
-->
<!--  Button row  -->
<!--
 ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
-->
<LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

    <!-- Button for Professor status -->
    <Button
        android:id="@+id/btnprofstats"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Popular per semester"
        android:textSize="18dp"
        android:textStyle="bold" />
    
    <!-- Button for Top three -->
     <Button
        android:id="@+id/btntopthree"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Most opted  Sub"
        android:textSize="18dp"
        android:textStyle="bold" />
     
     
     <!-- Button for popular Professor -->
     <Button
        android:id="@+id/btnpoprof"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="PopularProfessors"
        android:textSize="18dp"
        android:textStyle="bold" />
     
     <!-- List view for Professor status -->
      <ListView
        android:id="@+id/Query1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
     
        <!-- List view for popular per semester -->
      <ListView
        android:id="@+id/Query2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
      

     
     

 </LinearLayout>


</LinearLayout>